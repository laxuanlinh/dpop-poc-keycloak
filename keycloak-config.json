{
  "realm": "poc-linh",
  "enabled": true,
  "clients": [
    {
      "clientId": "poc-linh-app",
      "name": "DPoP Demo Client",
      "enabled": true,
      "publicClient": true,
      "clientAuthenticatorType": "none",
      "protocol": "openid-connect",
      "protocolMappers": [
        {
          "name": "username to sub",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-property-mapper",
          "config": {
            "user.attribute": "username",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "sub",
            "jsonType.label": "String"
          }
        }
      ],
      "redirectUris": [
        "http://localhost:3000/*"
      ],
      "attributes": {
        "dpop.bound.access.tokens": "true"
      },
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "defaultClientScopes": [
        "profile",
        "email",
        "payment-audience"
      ]
    }
  ],
  "clientScopes": [
    {
      "name": "payment-audience",
      "protocol": "openid-connect",
      "protocolMappers": [
        {
          "name": "payment-service-audience",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.client.audience": "poc-linh-app",
            "access.token.claim": "true",
            "id.token.claim": "false"
          }
        }
      ]
    }
  ],
  "users": [
    {
      "username": "test",
      "enabled": true,
      "email": "test@test.com",
      "emailVerified": true,
      "firstName": "Test",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "123",
          "temporary": false
        }
      ]
    }
  ]
}